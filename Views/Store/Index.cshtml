@using customs.ViewModels
@{
    ViewData["Title"] = "Store";
    FileView[] files = ViewBag.Files;
    DateTime now = DateTime.UtcNow;
}

<div class="container">
    <div class="row">
        @if (files.Length > 0)
        {
            <div class="col-12">
                <p>There are @files.Length files</p>
            </div>
            <div class="col-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">File</th>
                            <th scope="col">Lifetime</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var f in files)
                        {
                            <tr>
                                <th scope="col">
                                    <a href="/Store/Download/@f.Id">
                                        @f.Name
                                    </a>
                                </th>
                                <th scope="col">@f.Lifetime</th>
                                <th class="remove-btn" scope="col">
                                    <a href="/Store/Delete/@f.Id">
                                        &times;
                                    </a>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>There are no files</p>
        }
    </div>
</div>
